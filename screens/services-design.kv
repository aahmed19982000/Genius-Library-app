#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<MainDesign>:
    name: "main_design"
    canvas.before:
        Color:
            rgba: 0.98, 0.98, 0.99, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        
        # --- 1. الشريط العلوي (Header) ثابت لا يتحرك ---
        BoxLayout:
            size_hint_y: None
            height: dp(80)
            padding: [dp(20), dp(10)]
            spacing: dp(15)
            
            Button:
                size_hint: None, None
                size: dp(45), dp(45)
                background_normal: ''
                background_color: 0, 0, 0, 0
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Ellipse:
                        pos: self.pos
                        size: self.size
                Image:
                    source: "assets/bell.png"
                    center: self.parent.center
                    size: dp(22), dp(22)

            Widget: # فراغ مرن لدفع العناصر لليمين واليسار

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: dp(120)
                Label:
                    text: "صباح الخير"
                    font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                    font_size: sp(14)
                    color: 0.5, 0.5, 0.5, 1
                    halign: "right"
                    text_size: self.size
                Label:
                    text: "أحمد!"
                    font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                    font_size: sp(22)
                    color: 0, 0, 0, 1
                    bold: True
                    halign: "right"
                    text_size: self.size
            
            Image:
                source: "assets/user_avatar.png"
                size_hint: None, None
                size: dp(50), dp(50)

        # --- 2. محتوى الصفحة القابل للتمرير ---
        ScrollView:
            do_scroll_x: False
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height  # هذا يمنع لخبطة العناصر
                padding: [dp(20), dp(10), dp(20), dp(20)]
                spacing: dp(25)

                # --- كارت الطابعة الرئيسي ---
                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(320)
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(25),]
                    
                    BoxLayout:
                        size_hint_y: 0.5
                        canvas.before:
                            Color:
                                rgba: 0.35, 0.45, 0.4, 1
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [dp(25), dp(25), 0, 0]
                        Image:
                            source: "assets/printer_hero.png"
                            allow_stretch: True

                    BoxLayout:
                        orientation: "vertical"
                        padding: [dp(20), dp(15)]
                        spacing: dp(5)
                        Label:
                            text: "ابدأ طلب طباعة جديد"
                            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                            font_size: sp(20)
                            color: 0, 0, 0, 1
                            bold: True
                        Label:
                            text: "ارفع ملفاتك وسنقوم بتوصيلها إلى باب منزلك غداً."
                            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                            font_size: sp(14)
                            color: 0.6, 0.6, 0.6, 1
                            halign: "center"
                        
                        Button:
                            text: "ابدأ الطلب"
                            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                            size_hint_y: None
                            height: dp(50)
                            background_normal: ''
                            background_color: 0, 0, 0, 0
                            canvas.before:
                                Color:
                                    rgba: 0.25, 0.45, 0.9, 1
                                RoundedRectangle:
                                    pos: self.pos
                                    size: self.size
                                    radius: [dp(12),]

                # --- إجراءات سريعة ---
                BoxLayout:
                    size_hint_y: None
                    height: dp(30)
                    Button:
                        text: "عرض الكل"
                        font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                        color: 0.25, 0.45, 0.9, 1
                        background_color: 0,0,0,0
                        size_hint_x: None
                        width: dp(80)
                    Widget:
                    Label:
                        text: "إجراءات سريعة"
                        font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                        font_size: sp(18)
                        bold: True
                        color: 0, 0, 0, 1

                GridLayout:
                    cols: 3
                    spacing: dp(12)
                    size_hint_y: None
                    height: dp(130)
                    
                    QuickActionCard:
                        text: "إعادة طلب"
                        icon: "assets/reorder_icon.png"
                        bg_color: 0.4, 0.1, 0.35, 1
                    QuickActionCard:
                        text: "طباعة مستندات"
                        icon: "assets/doc_icon.png"
                        bg_color: 0.8, 0.4, 0.1, 1
                    QuickActionCard:
                        text: "طباعة صور"
                        icon: "assets/image_icon.png"
                        bg_color: 0.2, 0.45, 0.55, 1

                # --- بانر الخصم ---
                BoxLayout:
                    size_hint_y: None
                    height: dp(80)
                    padding: dp(15)
                    canvas.before:
                        Color:
                            rgba: 0.25, 0.45, 0.9, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [dp(15),]
                    Image:
                        source: "assets/tag_icon.png"
                        size_hint_x: None
                        width: dp(30)
                    BoxLayout:
                        orientation: "vertical"
                        Label:
                            text: "خصم 15%"
                            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                            bold: True
                            halign: "right"
                            text_size: self.size
                        Label:
                            text: "على طلب الطباعة الملونة الأول."
                            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                            font_size: sp(12)
                            halign: "right"
                            text_size: self.size

                # --- تتبع طلباتك ---
                Label:
                    text: "تتبع طلباتك"
                    font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
                    font_size: sp(18)
                    bold: True
                    color: 0, 0, 0, 1
                    halign: "right"
                    text_size: self.size
                    size_hint_y: None
                    height: dp(30)

                # كارت الطلب (تم التوصيل)
                OrderTrackingCard:
                    file_name: "رسالة_الماجستير.pdf"
                    status: "تم التوصيل"
                    details: "نسختين • ملون"
                    icon: "assets/pdf_blue.png"

        # --- 3. شريط التنقل السفلي ثابت ---
        BoxLayout:
            size_hint_y: None
            height: dp(65)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            BottomNavButton:
                text: "حسابي"
                icon: "assets/user_icon.png"
            BottomNavButton:
                text: "المحفظة"
                icon: "assets/wallet_icon.png"
            BottomNavButton:
                text: "الطلبات"
                icon: "assets/orders_icon.png"
            BottomNavButton:
                text: "الرئيسية"
                icon: "assets/home_icon.png"
                active: True

# --- القوالب المساعدة (Templates) لمنع تكرار الكود ولخبطة الأبعاد ---

<QuickActionCard@ButtonBehavior+BoxLayout>:
    orientation: "vertical"
    text: ""
    icon: ""
    bg_color: 1, 1, 1, 1
    padding: dp(10)
    spacing: dp(5)
    canvas.before:
        Color:
            rgba: root.bg_color
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(15),]
    Image:
        source: root.icon
        size_hint_y: 0.6
    Label:
        text: root.text
        font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
        font_size: sp(13)
        bold: True
        halign: "center"

<OrderTrackingCard@BoxLayout>:
    file_name: ""
    status: ""
    details: ""
    icon: ""
    size_hint_y: None
    height: dp(90)
    padding: [dp(15), dp(10)]
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [dp(15),]
    Label:
        text: root.status
        color: 0.2, 0.7, 0.3, 1
        font_size: sp(12)
        size_hint_x: 0.3
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.file_name
            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
            bold: True
            color: 0, 0, 0, 1
            halign: "right"
            text_size: self.size
        Label:
            text: root.details
            font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
            color: 0.6, 0.6, 0.6, 1
            font_size: sp(12)
            halign: "right"
            text_size: self.size
    Image:
        source: root.icon
        size_hint_x: None
        width: dp(40)

<BottomNavButton@ButtonBehavior+BoxLayout>:
    orientation: "vertical"
    text: ""
    icon: ""
    active: False
    padding: [0, dp(5)]
    Image:
        source: root.icon
        color: (0.25, 0.45, 0.9, 1) if root.active else (0.6, 0.6, 0.6, 1)
    Label:
        text: root.text
        font_name: "fonts/ArbFONTS-AwanZaman-Regular.ttf"
        font_size: sp(12)
        color: (0.25, 0.45, 0.9, 1) if root.active else (0.6, 0.6, 0.6, 1)